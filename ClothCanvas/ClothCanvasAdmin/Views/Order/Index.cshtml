@model IEnumerable<ClothCanvas.Entity.Order>

@{
    ViewData["Title"] = "Order List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.User.UserName</td>
                <td>$@order.TotalPrice</td>
                <td>@order.Status</td>
                <td>@order.CreatedAt.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-info">Details</a>
                    <a asp-action="ChangeStatus" asp-route-id="@order.OrderId" class="btn btn-warning">Change Status</a>
                </td>
            </tr>
        }
    </tbody>
</table>
