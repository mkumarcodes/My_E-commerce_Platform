@model ClothCanvas.Entity.Order

@{
    ViewData["Title"] = "Change Order Status";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ChangeStatus" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="OrderId" />
        <label asp-for="Status" class="control-label">New Status</label>
        <select asp-for="Status" class="form-control">
            <option value="">Select a new status</option>
            <option value="Pending">Pending</option>
            <option value="Processing">Processing</option>
            <option value="Shipped">Shipped</option>
            <option value="Delivered">Delivered</option>
            <option value="Cancelled">Cancelled</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Change Status" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
